<form id="hastaProfili" action="/hasta/hastaProfili" method="post"></form>


<script src="/public/js/bebekizlem.js"></script>

<script>

    GELISIM_TABLOSU_BILGILERININ_SORGULANMASI=[]
BEBEGIN_COCUGUN_BEYIN_GELISIMINI_ETKILEYEBILECEK_RISKLER=[]
EBEVEYNIN_PSIKOLOJIK_GELISIMI_DESTEKLEYICI_AKTIVITELERI=[]
BEBEGIN_COCUGUN_PSIKOLOJIK_GELISIMINDEKI_RISKLERE_YONELIK_EGITIMLER=[]
BEBEGIN_COCUGUN_RISK_FAKTORLERINE_YAPILAN_MUDAHALE=[]
BEBEK_COCUKTA_SIK_IZLEME_ALINAN_RISK_ALTINDAKI_OLGUNUN_TAKIBI=[]
 $( "#Kaydetbtn" ).click(function() {
            
            if($('#kilo').val().length==0 && $('#boy').val().length==0 && $('#bascevresi').val().length==0  ){
                alert('Ağırlık,Boy,Baş Çevresi bilgileri boş bırakılamaz')
            }
            else{
                        var input = $("<input>").attr("type", "hidden").attr("name", "hastaTC").val(<%=hasta.Id%>);
                    $('#bebekFORM').append(input);

                    if(GELISIM_TABLOSU_BILGILERININ_SORGULANMASI.length>0){
                        var input3 = $("<input>").attr("type", "hidden").attr("name", "GELISIM_TABLOSU_BILGILERININ_SORGULANMASI").val(JSON.stringify(GELISIM_TABLOSU_BILGILERININ_SORGULANMASI));
                        $('#bebekFORM').append(input3);
                    }
                    if(BEBEGIN_COCUGUN_BEYIN_GELISIMINI_ETKILEYEBILECEK_RISKLER.length>0){
                        var input3 = $("<input>").attr("type", "hidden").attr("name", "BEBEGIN_COCUGUN_BEYIN_GELISIMINI_ETKILEYEBILECEK_RISKLER").val(JSON.stringify(BEBEGIN_COCUGUN_BEYIN_GELISIMINI_ETKILEYEBILECEK_RISKLER));
                        $('#bebekFORM').append(input3);
                    }
                    if(EBEVEYNIN_PSIKOLOJIK_GELISIMI_DESTEKLEYICI_AKTIVITELERI.length>0){
                        var input3 = $("<input>").attr("type", "hidden").attr("name", "EBEVEYNIN_PSIKOLOJIK_GELISIMI_DESTEKLEYICI_AKTIVITELERI").val(JSON.stringify(EBEVEYNIN_PSIKOLOJIK_GELISIMI_DESTEKLEYICI_AKTIVITELERI));
                        $('#bebekFORM').append(input3);
                    }
                    if(BEBEGIN_COCUGUN_PSIKOLOJIK_GELISIMINDEKI_RISKLERE_YONELIK_EGITIMLER.length>0){
                        var input3 = $("<input>").attr("type", "hidden").attr("name", "BEBEGIN_COCUGUN_PSIKOLOJIK_GELISIMINDEKI_RISKLERE_YONELIK_EGITIMLER").val(JSON.stringify(BEBEGIN_COCUGUN_PSIKOLOJIK_GELISIMINDEKI_RISKLERE_YONELIK_EGITIMLER));
                        $('#bebekFORM').append(input3);
                    }
                    if(BEBEGIN_COCUGUN_RISK_FAKTORLERINE_YAPILAN_MUDAHALE.length>0){
                        var input3 = $("<input>").attr("type", "hidden").attr("name", "BEBEGIN_COCUGUN_RISK_FAKTORLERINE_YAPILAN_MUDAHALE").val(JSON.stringify(BEBEGIN_COCUGUN_RISK_FAKTORLERINE_YAPILAN_MUDAHALE));
                        $('#bebekFORM').append(input3);
                    }
                    if(BEBEK_COCUKTA_SIK_IZLEME_ALINAN_RISK_ALTINDAKI_OLGUNUN_TAKIBI.length>0){
                        var input3 = $("<input>").attr("type", "hidden").attr("name", "BEBEK_COCUKTA_SIK_IZLEME_ALINAN_RISK_ALTINDAKI_OLGUNUN_TAKIBI").val(JSON.stringify(BEBEK_COCUKTA_SIK_IZLEME_ALINAN_RISK_ALTINDAKI_OLGUNUN_TAKIBI));
                        $('#bebekFORM').append(input3);
                    }


                    $.ajax({
                        type: "POST",
                        url: '/izlemler/Bebekcocukizlem/kaydet',
                        data: $('#bebekFORM').serialize(), // serializes the form's elements.
                        success: function(data)
                        {
                                    alert('Bebek Çocuk İzlem Kaydedilmiştir.')       
                                    var input = $("<input>").attr("type", "hidden").attr("name", "isim").val(<%=hasta.Id%>);
                                    $('#hastaProfili').append(input); 
                                    $("#hastaProfili").submit();                         
                        }
                    });
            }
  });
  $(document).ready( function() {
    var now = new Date();
    var month = (now.getMonth() + 1);               
    var day = now.getDate();
    if (month < 10) 
        month = "0" + month;
    if (day < 10) 
        day = "0" + day;
    var today = now.getFullYear() + '-' + month + '-' + day;
    $('#izlemTarihi').val(today);
});
</script>

