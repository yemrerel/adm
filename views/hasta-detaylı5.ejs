             $(this).css("background-color", "blue");
             $(this).css("color", "white");
             if($(this).attr("id")=="badState"){position=33.33;}
             if($(this).attr("id")=="midState"){position=66.66;}
             if($(this).attr("id")=="goodState"){position=100;}

             $(".progress-bar").find('.progress-bar__bar').css('transform','translateX('+position+'%)'); 
             $(".progress-bar").find('.progress-bar__bar').css('-webkit-transform','translateX('+position+'%)');
     });

   // Send bar to point of click
$(".progress-bar").on("click", function(e) {
  var offset = $(this).offset(),
      position = Math.floor((e.pageX - offset.left)/$(this).width()*100) + 1;
  if(position<33.34){
           $(".durumBtn").css("background-color", "white");
           $(".durumBtn").css("color", "#325179");
           $("#badState").css("background-color", "blue");
           $("#badState").css("color", "white");
  }
  else if(position>=33.34 && position<66.67){
           $(".durumBtn").css("background-color", "white");
           $(".durumBtn").css("color", "#325179");
           $("#midState").css("background-color", "blue");
           $("#midState").css("color", "white");
  }
  else{
           $(".durumBtn").css("background-color", "white");
           $(".durumBtn").css("color", "#325179");
           $("#goodState").css("background-color", "blue");
           $("#goodState").css("color", "white");
  }

  $(this).find('.progress-bar__bar').css('transform','translateX('+position+'%)'); 
  $(this).find('.progress-bar__bar').css('-webkit-transform','translateX('+position+'%)');
});

