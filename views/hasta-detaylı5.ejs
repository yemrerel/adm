// just for demo purposes
.progress-bar { cursor: pointer; margin-bottom: 10px; user-select: none; }

.progress-bar {
  border-radius: 4px;
  box-shadow: inset 0 0.5em 0.5em rgba(0,0,0,0.05);
  height: 20px;
  margin: 10px;
  overflow: hidden;
  position: relative;
  transform: translateZ(0);
  width: 100%;
  height: 12%;
}

.progress-bar--attention { background-color: @brand-attention; }
.progress-bar--danger { background-color: @brand-danger; }
.progress-bar--info { background-color: @brand-info; }
.progress-bar--primary { background-color: @brand-primary; }
.progress-bar--success { background-color: @brand-success; }
.progress-bar--warning { background-color: @brand-warning; }

.progress-bar--success-to-danger {
  @list: @brand-success, @brand-warning 75%, @brand-danger;
  background-image: svg-gradient(to right, @list);
}

.progress-bar__bar {
  background-color: #ececec;
  box-shadow: inset 0 0.5em 0.5em rgba(0,0,0,0.05);
  bottom: 0;
  left: 0;
  position: absolute;
  right: 0;
  top: 0;
  transition: all 500ms ease-out;
}


</style>


